<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Morador.
    -->
    <changeSet id="20150928222637" author="jhipster">
        <createTable tableName="MORADOR">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nome" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="cpf" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="sexo" type="varchar(255)"/>
            <column name="email" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="senha" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="data_nascimento" type="date">
                <constraints nullable="false" />
            </column>
            <column name="ativo" type="bit"/>
            <column name="bloqueia_agendamento" type="bit"/>
            <column name="tipo" type="varchar(255)"/>
            <column name="imovel_id" type="bigint"/>
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="imovel_id"
                                 baseTableName="MORADOR"
                                 constraintName="fk_morador_imovel_id"
                                 referencedColumnNames="id"
                                 referencedTableName="IMOVEL"/>

    </changeSet>
</databaseChangeLog>
