<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql"/>
    <property name="autoIncrement" value="false" dbms="oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity OcorrenciaTipo.
    -->
    <changeSet id="20151005213345" author="jhipster">
        <createTable tableName="OCORRENCIA_TIPO">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="ocorrencia_item_id" type="bigint">
                <constraints unique="true"/>
            </column>
            <column name="ocorrencia_sub_item_id" type="bigint">
                <constraints unique="true"/>
            </column>
            <column name="ocorrencia_prioridade_id" type="bigint">
                <constraints unique="true"/>
            </column>
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="ocorrencia_item_id"
                                 baseTableName="OCORRENCIA_TIPO"
                                 constraintName="fk_ocorrenciatipo_ocorrenciaitem_id"
                                 referencedColumnNames="id"
                                 referencedTableName="OCORRENCIA_ITEM"/>

        <addForeignKeyConstraint baseColumnNames="ocorrencia_sub_item_id"
                                 baseTableName="OCORRENCIA_TIPO"
                                 constraintName="fk_ocorrenciatipo_ocorrenciasubitem_id"
                                 referencedColumnNames="id"
                                 referencedTableName="OCORRENCIA_SUB_ITEM"/>

        <addForeignKeyConstraint baseColumnNames="ocorrencia_prioridade_id"
                                 baseTableName="OCORRENCIA_TIPO"
                                 constraintName="fk_ocorrenciatipo_ocorrenciaprioridade_id"
                                 referencedColumnNames="id"
                                 referencedTableName="OCORRENCIA_PRIORIDADE"/>

    </changeSet>
</databaseChangeLog>
